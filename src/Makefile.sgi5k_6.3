## for SGI (IRIX 6.3, R5000 chip)

# USE_ZLIB = -DHAVE_ZLIB
# LZLIB    = -lz

CCDEBS = -DAFNI_DEBUG -DIMSEQ_DEBUG -DDISPLAY_DEBUG -DTHD_DEBUG
CC     = cc -w -O2 -n32 -r5000 -DSGI -DUSE_TRACING
CCVOL  = cc -w -O2 -n32 -r5000 -DSGI -DUSE_TRACING
CCFAST = $(CC)
CCMIN  = cc -n32
CCD    = $(CC) $(CCDEBS)
IFLAGS = -I.
LFLAGS = -s -L.

PLUGIN_SUFFIX = so
PLUGIN_LFLAGS = -shared -n32
PLUGIN_CC     = $(CC)
PLFLAGS       = -L. -n32

AR     = /usr/bin/ar
RANLIB = /sbin/touch
TAR    = /bin/tar
MKDIR  = /bin/mkdir
LD     = /bin/ld
GZIP   = /usr/local/bin/gzip

RM = /bin/rm -f
MV = /bin/mv -f
CP = /bin/cp -f

LINT = /usr/bin/lint -a -b -u -v -x $(IFLAGS) $(CCDEFS)

INSTALLDIR = ./sgi5k_6.3
LIBDIR = $(INSTALLDIR)

LLIBS  = -lmri -lXm -lXt -lX11 $(LZLIB) -lm -lc


###############################################################

MAKE = make
include Makefile.INCLUDE

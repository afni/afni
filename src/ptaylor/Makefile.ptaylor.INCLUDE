WARNTOPT = ${WARNOPT}

#library only
${PTAYLORLIB} : ${PTAYLOR_OBJS} 
	rm -f ${PTAYLORLIB}
	ar q ${PTAYLORLIB} ${PTAYLOR_OBJS} 
	echo "library Rebuilt ..."
	$(RANLIB) ${PTAYLORLIB} 



clean:
	$(RM) *.o *.a ${FC_PROGRAMS}


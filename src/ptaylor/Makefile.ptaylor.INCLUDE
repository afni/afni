PTAYLORLIB = libtracktools.a

PTAYLOR_SRCS = DoTrackit.c TrackIO.c rsfc.c diffusiony.c FuncTrac.c \
               roiing.c Fat_Labels.c colorbasic.c LS_funcs.c   \

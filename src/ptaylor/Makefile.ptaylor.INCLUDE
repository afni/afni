progs: $(FC_PROGRAMS)

echo_progs:
	echo "$(FC_PROGRAMS)" | tr ' ' '\n' | sort | uniq 

all: ${PTAYLORLIB} progs install 

afni_all: ${PTAYLORLIB} progs
	@if [ -f  libtracktools.a ]; then cp -p libtracktools.a ../; fi;	
 


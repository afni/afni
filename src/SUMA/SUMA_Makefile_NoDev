# library only

# static libSUMA
libSUMA.a : libply.a libglut.a ${SUMA_OBJS} MarchingCubes.o
	rm -f ${SUMALIB}
	ar q ${SUMALIB} ${SUMA_OBJS} MarchingCubes.o
	echo "Rebuilt library libSUMA.a ..."
	$(RANLIB) ${SUMALIB} 

# shared libSUMA
libSUMA.so : libply.a libglut.a ${SUMA_OBJS} MarchingCubes.o
	rm -f ${SUMALIB}
	${CC} -shared -fPIC -o ${SUMALIB} ${SUMA_OBJS} MarchingCubes.o
	echo "Rebuilt library libSUMA.so ..."

${SUMASLIB} : ${SUMA_SOBJS}
	rm -f ${SUMASLIB}
	ar q ${SUMASLIB} ${SUMA_SOBJS}
	echo "SUMA Seg library Rebuilt ..."
	$(RANLIB) ${SUMASLIB} 


${GLWLIB} : ${GLW_OBJS}
	rm -f ${GLWLIB}
	ar q ${GLWLIB} ${GLW_OBJS}
	echo "library Rebuilt ..."
	$(RANLIB) ${GLWLIB}
	cp ${GLWLIB} ../ 

# rebuild libmri.a only when suma related files change
libmri.a : ../suma_utils.c ../suma_algorithms.c  ../suma_datasets.c  ../suma_niml.c
	( cd .. ;	\
	  $(MAKE) libmri.a ; \
	  cd SUMA  )

# and libmri.so
libmri.so : ../suma_utils.c ../suma_algorithms.c  ../suma_datasets.c  ../suma_niml.c
	( cd .. ;	        \
	  $(MAKE) libmri.so ;   \
	  cd SUMA  )

libtracktools.a : 
	( cd .. ;	\
	  $(MAKE) libtracktools.a ; \
	  cd SUMA  )

#library using GTS functions
${SUMAGTSLIB} : libply.a libglut.a ${SUMALIB} ${SUMA_GTS_OBJS}
	rm -f ${SUMAGTSLIB}
	ar q ${SUMAGTSLIB} ${SUMA_GTS_OBJS}
	echo "library GTS Rebuilt ..."
	$(RANLIB) ${SUMAGTSLIB} 

#Main objects, You don't want main functions in libSUMA.a 
mainobj: ${SUMALIB} ${SUMA_SRCS_OBJS}

# do not remove ../suma_*.o  22 Sep, 2014 [rickr]
clean:
	$(RM) *.o GLw_local/GL/*.o ${SUMA_EXECS}


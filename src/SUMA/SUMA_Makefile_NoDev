#Version of SUMA_Makefile with no ifdef statements

MAKE = make

ifdef MRI_SHARED
SUMALIB = libSUMA.so
else
SUMALIB = libSUMA.a
endif

SUMASLIB = libSUMAseg.a
SUMAGTSLIB = libSUMAGTS.a
AFNILIB = -lmrix -lcoxplot -lmri -ltracktools -lf2c -l3DEdge
MAINCODE = SUMA
SUMALIBLIST = ${SUMALIB} libglut.a libply.a 
GLWLIB = libGLws.a

## 07 Dec 2005 -- Modify include path (RWCox)

SUMA_INPATH = ${SUMA_INCLUDE_PATH} -I../nifti/nifti2 -I../nifti/niftilib -I../nifti/nifticdf -I../nifti/znzlib -I../3DEdge/src -I../rickr -IGLUT -I../f2c -I.. -I../niml -I../coxplot -I../ptaylor


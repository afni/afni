#!/bin/tcsh 

setenv AFNI_R_DIR $0:h

# note the second to last index
@ penult = $#argv - 1

if ( $#argv > 2 ) then
   R --no-restore --save --no-readline --args $argv[2-$penult]     \
           < $argv[1] >& $argv[$#argv]
else if ( $#argv == 2 ) then
   R --no-restore --save --no-readline < $argv[1] >& $argv[2]
else if ( $#argv == 1 ) then
    echo "** afni_run_R: requires at least 2 args"
    if ( "$argv[1]" == "-help" ) then
        exit 0
    endif
    exit 1
else
    echo "** afni_run_R: requires at least 2 args"
    exit 0
endif


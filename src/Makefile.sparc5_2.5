CCDEBS = -DAFNI_DEBUG -DIMSEQ_DEBUG -DDISPLAY_DEBUG -DTHD_DEBUG
CC     = cc -fast -Xa -w -DSOLARIS -DUSE_TRACING
CCVOL  = cc -fast -Xa -w -DSOLARIS -DUSE_TRACING
CCFAST = $(CC)
CCMIN  = cc
CCD    = $(CC) $(CCDEBS)
IFLAGS = -I. -I/usr/dt/include -I/usr/openwin/include
LFLAGS = -s -L. -L/usr/dt/lib -L/usr/openwin/lib -R/usr/dt/lib:/usr/openwin/lib:/usr/lib

# These extra libraries are for Suns

EXTRA_LIBS = -lsocket -lnsl -lgen -ldl

PLUGIN_SUFFIX = so
PLUGIN_LFLAGS = -G
PLUGIN_CC     = $(CC)
PLFLAGS       = -L. -L/usr/dt/lib -L/usr/openwin/lib -R/usr/dt/lib:/usr/openwin/lib:/usr/lib

AR     = /usr/ccs/bin/ar
RANLIB = /usr/bin/touch
TAR    = /bin/tar
GZIP   = gzip
MKDIR  = /bin/mkdir
LD     = /usr/ucb/ld

RM = /bin/rm -f
MV = /bin/mv -f
CP = /bin/cp -f

LINT = /usr/bin/lint -b -u -v -x -Aa $(IFLAGS) $(CCDEFS)

INSTALLDIR = ./sparc5_2.5
LIBDIR = $(INSTALLDIR)

LLIBS  = -lmri -lXm -lXt -lX11 $(LZLIB) -lm $(EXTRA_LIBS)

######################################################################

MAKE = make
include Makefile.INCLUDE

## for HP-UX 10.20

CCDEBS = -DAFNI_DEBUG -DIMSEQ_DEBUG -DDISPLAY_DEBUG -DTHD_DEBUG
CC     = cc -Ae -z +O1 -DHP -DUSE_TRACING -DHAVE_XDBE
CCVOL  = cc -Ae -z +O1 -DHP -DUSE_TRACING -DHAVE_XDBE
CCFAST = cc -Ae -z +O3 -DHP +Oaggressive +Olibcalls
CCMIN  = cc -Ae
CCD    = $(CC) $(CCDEBS)
IFLAGS = -I. -I/usr/include/X11R5 -I/usr/include/Motif1.2
LFLAGS = -s -L. -L/usr/lib/X11R5 -L/usr/lib/Motif1.2

PLUGIN_SUFFIX = sl
PLUGIN_LFLAGS = -ldld -lc -b
PLUGIN_CC     = $(CC) +z
PLFLAGS       = -Wl,-E -Wl,-x -L. -L/usr/lib/X11R5 -L/usr/lib/Motif1.2

AR     = /bin/ar
RANLIB = /bin/ranlib
TAR    = /bin/tar
GZIP   = gzip
MKDIR  = /bin/mkdir

RM = /bin/rm -f
MV = /bin/mv -f
CP = /bin/cp -f
LD = /bin/ld

LINT = /usr/bin/lint -b -u -v -x -Aa $(IFLAGS) $(CCDEFS)

INSTALLDIR = ./hpux_10.20
LIBDIR = $(INSTALLDIR)

LLIBS  = -lmri -lXm -lXt -lXext -lX11 -lm -ldld -lc

# vvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv
# For suma (NO STATIC LINKING OF GL libs)
SUMA_INCLUDE_PATH = -I/usr/X11R6/include -I./ -I../
SUMA_LINK_PATH = -L/usr/lib -L/usr/X11R6/lib -L../
SUMA_LINK_LIB = -lMesaGLwM -lMesaGLw -lGLU -lGL -lXmu -lXm -lXt -lXext -lX11 -lcurses -lm 
# ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^


######################################################################

include Makefile.INCLUDE
